<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/font_default</item>
    </style>

    <style name="customTextViewFontBoldStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/font_default</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="customEditTextFontStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/font_default</item>
    </style>

    <style name="customToolbarFontStyle" parent="Widget.Material3.Toolbar">
        <item name="android:fontFamily">@font/font_default</item>
    </style>


    <style name="customAlertDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:colorBackground">?attr/colorBackgroundFloating</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    
    <style name="navigationBar" parent="Widget.Design.BottomNavigationView">
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="itemBackground">@color/PrimaryColor</item>
        <item name="itemIconTint">@color/selector_navigationbar</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextAppearanceActive">@style/bottomNavigationTextAppearance</item>
    </style>

    <style name="bottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/bodyTextSize</item>
    </style>

    <style name="menuDetailTab" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">@color/SecondaryText</item>
        <item name="tabBackground">@drawable/style_menu_tab</item>
        <item name="android:background">@color/LightPrimaryColor</item>
        <item name="tabTextAppearance">@style/tabText</item>
    </style>

    <style name="tabText" parent="Widget.Material3.TabLayout">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="toolbar">
        <item name="navigationIcon">@drawable/ic_arrow_back_24</item>
        <item name="menu">@menu/menu_toolbar</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="favoriteRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:isIndicator">true</item>
        <item name="android:numStars">5</item>
        <item name="android:progressTint">@color/RatingBarColor</item>
        <item name="android:stepSize">1</item>
    </style>

</resources>